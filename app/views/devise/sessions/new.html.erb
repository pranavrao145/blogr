<div class="section">
  <div class="container">
    <h2 class="title">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control">
          <% if resource.errors[:email].any? %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-danger" %>
            <% resource.errors[:email].each do |error| %>
              <p class="help is-danger">
                Email <%= error %>
              </p>
            <% end %>
          <% else %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
          <% end %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password, class: "label" %>
        <div class="control">
          <% if resource.errors[:password].any? %>
            <%= f.password_field :password, autocomplete: "current-password", class: "input is-danger" %>
            <% resource.errors[:password].each do |error| %>
              <p class="help is-danger">
                Password <%= error %>
              </p>
            <% end %>
          <% else %>
            <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
          <% end %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <div class="control">
            <%= f.check_box :remember_me, class:"checkbox" %>
            <%= f.label :remember_me, class: "checkbox" %>
          </div>
        </div>
      <% end %>
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <%= f.submit "Log in", class:"button is-link" %>
          </div>
        </div>
      <% end %>
      <div class="level-right">
        <div class="level-item">
          <div class="buttons">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
