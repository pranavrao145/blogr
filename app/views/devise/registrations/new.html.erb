<div class="section">
  <div class="container">
    <h2 class="title">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control">
          <% if resource.errors[:email].any? %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-danger" %>
            <% resource.errors[:email].each do |error| %>
              <p class="help is-danger">
                Email <%= error %>
              </p>
            <% end %>
          <% else %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
          <% end %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password, class: "label" %>
        <div class="control">
          <% if resource.errors[:password].any? %>
            <%= f.password_field :password, autocomplete: "new-password", class: "input is-danger" %>
            <% resource.errors[:password].each do |error| %>
              <p class="help is-danger">
                Password <%= error %>
              </p>
            <% end %>
          <% else %>
            <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
          <% end %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <div class="control">
          <% if resource.errors[:password_confirmation].any? %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-danger" %>
            <% resource.errors[:password_confirmation].each do |error| %>
              <p class="help is-danger">
                Password confirmation <%= error %>
              </p>
            <% end %>
          <% else %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
          <% end %>
        </div>
      </div>
      <div class="level">
        <div class="level-left">
          <div class="level-item">
            <%= f.submit "Sign Up", class: "button is-link" %>
          </div>
        </div>
    <% end %>
    <div class="level-right">
      <div class="level-item">
        <div class="buttons">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
