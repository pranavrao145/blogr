<div class="section">
  <div class="container">
    <h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="field">
        <%= f.label :email, class: "label" %>
        <div class="control">
          <% if resource.errors[:email].any? %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-danger" %>
            <% resource.errors[:email].each do |error| %>
              <p class="help is-danger">
                Email <%= error %>
              </p>
            <% end %>
          <% else %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
          <% end %>
        </div>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field">
        <%= f.label :password, class: "label" %>
        <div class="control">
          <% if resource.errors[:password].any? %>
            <%= f.password_field :password, autocomplete: "new-password", class: "input is-danger" %>
            <% resource.errors[:password].each do |error| %>
              <p class="help is-danger">
                Password <%= error %>
              </p>
            <% end %>
          <% else %>
            <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
          <% end %>
        </div>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "label" %>
        <div class="control">
          <% if resource.errors[:password_confirmation].any? %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input is-danger" %>
            <% resource.errors[:password_confirmation].each do |error| %>
              <p class="help is-danger">
                Password confirmation <%= error %>
              </p>
            <% end %>
          <% else %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
          <% end %>
        </div>
      </div>
      <div class="field">
        <%= f.label :current_password, class: "label" %>
        <div class="control">
          <% if resource.errors[:current_password].any? %>
            <%= f.password_field :current_password, autocomplete: "current-password", class:"input is-danger" %>
            <% resource.errors[:current_password].each do |error| %>
              <p class="help is-danger">
                Current password <%= error %>
              </p>
            <% end %>
          <% else %>
            <%= f.password_field :current_password, autocomplete: "current-password", class:"input" %>
          <% end %>
          <i>(we need your current password to confirm your changes)</i>
        </div>
      </div>
      <div class="actions mb-4">
        <%= f.submit "Update", class:"button is-link" %>
      </div>
    <% end %>
    <h3 class="title is-4">Cancel my account</h3>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-danger" %>
    <%= link_to "Back", :back, class:"button is-light mt-2" %>
  </div>
</div>
